<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label>Figure's Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <p>Choose from available Titles:</p>
  <% @titles.each do |title| %>
    <p><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><label><%= title.name %></label></p>
  <% end %>

  <p>Choose From Available Landmarks:</p>
  <% @landmarks.each do |landmark| %>
    <p><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id%>" id="landmark_<%= landmark.id %>"><label><%= landmark.name %></label></p>
  <% end %>

  <p><label>Or create a new Title:</label><input type="text" name="title[name]" id="new_title"></p>

  <p><label>Or create a new Landmark:</label><input type="text" name="landmark[name]" id="new_landmark"></p>
  <input type="submit" value="Edit Figure">

</form>
